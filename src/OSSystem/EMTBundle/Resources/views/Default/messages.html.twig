{% extends 'base.html.twig'  %}
{% trans_default_domain "OSSystemEMTBundle" %}

{% block nav %}
    {% include "OSSystemEMTBundle:Default:widgets/topmenu.html.twig" %}
{% endblock %}


{% block content %}
{{ tinymce_init() }}
<h1 class="clear">Messages</h1>
<a href="/" class="button blue">
    <span class="arrow">Back to conferences list</span>
</a> 
<a href="{{ path("os_system_emt_conference_view", {"conferenceId": conference.id})}}" class="button blue">
    <span class="arrow">View conference</span>
</a>
<a href="{{ path("os_system_emt_export_pdf", {"conferenceId": conference.id, "appeal": appeal})}}" class="button green">
    <span class="arrow">Export to PDF</span>
</a>

<div class="clear pb-30"></div>
{% include "OSSystemEMTBundle:Default:widgets/messagesList.html.twig" with {'messages': messages } %}

{% include "OSSystemEMTBundle:Default:widgets/messageAddForm.html.twig" with {'formAddMessage': formAddMessage } %}

<a href="/" class="button blue">
    <span class="arrow">Back to conferences list</span>
</a> 
<a href="{{ path("os_system_emt_conference_view", {"conferenceId": conference.id})}}" class="button blue">
    <span class="arrow">View conference</span>
</a>
{% endblock %}

{% block tinyMCEScripts %}
    {{ parent() }}
    <script type="text/javascript">
    tinyMCE.init({
        mode: "exact",
        elements: "ossystem_emtbundle_message_content",
        theme_advanced_buttons3: "",
        plugins : "paste",
        theme_advanced_buttons1_add : "pasteword",
        width: "890"
    });
    </script>
{% endblock %}