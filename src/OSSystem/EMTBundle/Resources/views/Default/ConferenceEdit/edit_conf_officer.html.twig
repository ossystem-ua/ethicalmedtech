            <div class="question_field">
                
                
                {{ form_widget(form.autopublishing, {'attr': {'class': 'mt-10'}}) }}
                {{ form_label(form.autopublishing, null, {'label_attr': {'class': 'w-500'}}) }}
                
                <div class="question_error">{{ form_errors(form.autopublishing) }}</div>
