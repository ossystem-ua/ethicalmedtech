            <div class="question_field">
                <label>Documents</label>
            </div>    
        </div>
            
        <div class="form_row">
            <div class="question_field ml-150">
                <div id="files_canvas">
                    
                    {% for document in conference.documents %}
                        
                        <div class="clearfix ">
                            <a href="/{{ document.webPath }}" target="_blank">{{ document.name }}</a><br>
                            <div class="filedate left">{{ document.createdAt|date("y-m-d h:i") }}</div>
                        </div>
                            
                    {% endfor %}
                    
                </div>   
            </div>    
        </div>
            
        <div class="form_row {% if 'comments' in conference.changedFields %}field-changed{% endif %}">
